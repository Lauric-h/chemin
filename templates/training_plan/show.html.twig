{% extends 'base.html.twig' %}

{% block title %}TrainingPlan{% endblock %}

{% block body %}
    <h1>TrainingPlan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training_plan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ training_plan.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ training_plan.startDate ? training_plan.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ training_plan.endDate ? training_plan.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ training_plan.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('training_plan_index') }}" class="btn btn-secondary">Back to list</a>

    <a href="{{ path('training_plan_edit', {'id': training_plan.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('training_plan/_delete_form.html.twig') }}
{% endblock %}
