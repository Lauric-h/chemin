{% extends 'base.html.twig' %}

{% block title %}Training Plans{% endblock %}

{% block body %}
    <h1>Training Plans</h1>
    <a href="{{ path('training_plan_new') }}">Create new</a>
    <div class="card border-0 shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0 rounded table-hover table-striped">
                    <thead class="thead-light">
                    <tr>
                        <th class="border-0 rounded-start">{{ knp_pagination_sortable(training_plans, 'name', 'tp.name') }}</th>
                        <th class="border-0">{{ knp_pagination_sortable(training_plans, 'start date', 'tp.startDate') }}</th>
                        <th class="border-0">{{ knp_pagination_sortable(training_plans, 'end date', 'tp.endDate') }}</th>
                        <th class="border-0 text-center">{{ knp_pagination_sortable(training_plans, 'duration', 'tp.duration')
                            }}</th>
                        <th class="border-0 rounded-end text-center">actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- Item -->
                    {% for training_plan in training_plans %}
                    <tr>
                        <td>{{ training_plan.name }}</td>
                        <td>
                            {{ training_plan.startDate ? training_plan.startDate|date('d-m-Y') : '' }}
                        </td>
                        <td>
                            {{ training_plan.endDate ? training_plan.endDate|date('d-m-Y') : '' }}
                        </td>
                        <td class="text-center">
                            {{ training_plan.duration }}
                        </td>
                        <td class="d-flex justify-content-around">
                            <a href="{{ path('training_plan_show', {'id': training_plan.id}) }}"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('training_plan_edit', {'id': training_plan.id}) }}"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                    <!-- End of Item -->
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(training_plans, 'base/pagination.html.twig') }}
    </div>
{% endblock %}
