{% extends 'base.html.twig' %}

{% block title %}Edit SportSession{% endblock %}

{% block body %}
    <h1>Edit SportSession</h1>

    {% for sport in sport_session.mainSport %}
        <p>{{ sport.name }}</p>
        <p>{{ sport.distance }}</p>
    {% endfor %}

    {{ include('sport_session/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="mb-2 mt-2">
        <a href="{{ path('sport_session_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
    <div class="mb-2 mt-2">
        <a href="{{ path('main_sport_new', {'id': sport_session.id}) }}" class="btn btn-primary">Add main sport</a>
    </div>

    {{ include('sport_session/_delete_form.html.twig') }}
{% endblock %}
