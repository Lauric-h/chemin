{% extends 'base.html.twig' %}

{% block title %}Edit Sport Session{% endblock %}

{% block body %}
    <h1>Edit Sport Session</h1>

    {# Main sport #}
    {{ include('main_sport/show.html.twig', {'sport_session': sport_session }) }}

    <div class="row">
        <div class="col col-6">
            {{ include('sport_session/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="col-6">
            <div class="row mb-4">
                <div class="col-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <div class="row d-block d-xl-flex align-items-center">
                                <div class="col col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                    <div class="icon-shape icon-shape-secondary rounded me-4 me-sm-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-run"
                                             width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5"
                                             stroke="#2c3e50"
                                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <circle cx="13" cy="4" r="1"/>
                                            <path d="M4 17l5 1l.75 -1.5"/>
                                            <path d="M15 21l0 -4l-4 -3l1 -6"/>
                                            <path d="M7 12l0 -3l5 -1l3 3l3 1"/>
                                        </svg>
                                    </div>
                                    <div class="d-sm-none">
                                        <h2 class="h5">Total Distance</h2>
                                        <h3 class="fw-extrabold mb-1"></h3>
                                    </div>
                                </div>
                                <div class="col px-xl-0">
                                    <div class="d-none d-sm-block">
                                        <h2 class="h6 text-gray-400 mb-0">Total Distance</h2>
                                        <h3 class="fw-extrabold mb-2">
                                            {{ sport_session.totalDistance }} {{ distance_unit }}
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <div class="row d-block d-xl-flex align-items-center">
                                <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                    <div class="icon-shape icon-shape-secondary rounded me-4 me-sm-0">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon icon-tabler icon-tabler-clock"
                                             width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5"
                                             stroke="#2c3e50"
                                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <circle cx="12" cy="12" r="9"/>
                                            <polyline points="12 7 12 12 15 15"/>
                                        </svg>
                                    </div>
                                    <div class="d-sm-none">
                                        <h2 class="h5">Total Duration</h2>
                                        <h3 class="fw-extrabold mb-1"></h3>
                                    </div>
                                </div>
                                <div class="col-12 col-xl-7 px-xl-0">
                                    <div class="d-none d-sm-block">
                                        <h2 class="h6 text-gray-400 mb-0">Total Duration</h2>
                                        <h3 class="fw-extrabold mb-2">
                                            {{ sport_session.totalDuration }} {{ duration_unit }}
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <div class="row d-block d-xl-flex align-items-center">
                                <div class="col col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                    <div class="icon-shape icon-shape-secondary rounded me-4 me-sm-0">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon icon-tabler icon-tabler-corner-right-up-double" width="44"
                                             height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50"
                                             fill="none"
                                             stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M5 19h6a3 3 0 0 0 3 -3v-7"/>
                                            <path d="M10 13l4 -4l4 4m-8 -5l4 -4l4 4"/>
                                        </svg>
                                    </div>
                                    <div class="d-sm-none">
                                        <h2 class="h5">Total Elevation Gain</h2>
                                        <h3 class="fw-extrabold mb-1"></h3>
                                    </div>
                                </div>
                                <div class="col px-xl-0">
                                    <div class="d-none d-sm-block">
                                        <h2 class="h6 text-gray-400 mb-0">Total Elevation Gain</h2>
                                        <h3 class="fw-extrabold mb-2">
                                            {{ sport_session.totalElevationGain }} {{ elevation_unit }}
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <div class="row d-block d-xl-flex align-items-center">
                                <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                    <div class="icon-shape icon-shape-secondary rounded me-4 me-sm-0">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon icon-tabler icon-tabler-corner-right-down-double" width="44"
                                             height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50"
                                             fill="none"
                                             stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M5 4h6a3 3 0 0 1 3 3v7"/>
                                            <path d="M10 10l4 4l4 -4m-8 5l4 4l4 -4"/>
                                        </svg>
                                    </div>
                                    <div class="d-sm-none">
                                        <h2 class="h5">Total Elevation Loss</h2>
                                        <h3 class="fw-extrabold mb-1"></h3>
                                    </div>
                                </div>
                                <div class="col-12 col-xl-7 px-xl-0">
                                    <div class="d-none d-sm-block">
                                        <h2 class="h6 text-gray-400 mb-0">Total Elevation Loss</h2>
                                        <h3 class="fw-extrabold mb-2">
                                            {{ sport_session.totalElevationLoss }} {{ elevation_unit }}
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-2 mt-2">
        <a href="{{ path('sport_session_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
    <div class="mb-2 mt-2">
    </div>

    {{ include('sport_session/_delete_form.html.twig') }}
{% endblock %}
