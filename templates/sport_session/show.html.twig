{% extends 'base.html.twig' %}

{% block title %}SportSession{% endblock %}

{% block body %}
    <h1>SportSession</h1>

    <div class="row">
        <h2>Main Sport</h2>
        {% for s in sport_session.mainSport %}
            <div class="col">
                {{ include('main_sport/show.html.twig', {'main_sport': s, 'sport_session': sport_session}) }}
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="col-6 col-sm-3 col-xl-4 mb-4">
            <div class="card border-0 shadow">
