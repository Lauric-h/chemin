                        <div class="col-12 col-xl-7 px-xl-0">
                            <div class="d-none d-sm-block">
                                <h2 class="h6 text-gray-400 mb-0">Total Elevation Loss</h2>
                                <h3 class="fw-extrabold mb-2">
                                    {{ sport_session.totalElevationLoss }}
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
