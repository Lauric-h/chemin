{% extends 'base.html.twig' %}

{% block title %}Trainings{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Trainings</h1>
        <button type="button" class="btn btn-primary d-inline-flex align-items-center">
            <i class="fas fa-plus-circle icon icon-xxs me-2 d-inline-flex align-items-center"></i>
            <a href="{{ path('sport_session_new') }}" class="text-white">Create new</a>
        </button>
    </div>

    <div class="card border-0 shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0 rounded table-hover table-striped">
                    <thead class="thead-light">
                    <tr>
                        <th class="border-0 rounded-start">
                            {{ knp_pagination_sortable(sport_sessions, 'date', 'ss.date') }}
                        </th>
                        <th class="border-0">
                            Name
                        </th>
                        <th class="border-0">
                            Duration
                        </th>
                        <th class="border-0 text-center">
                            Distance</th>
                        <th class="border-0 text-center">
                            Elevation gain
                        </th>
                        <th class="border-0 text-center">
                            Elevation loss
                        </th>
                        <th class="border-0 text-center">
                            Total duration
                        </th>
                        <th class="border-0 text-center">
                            Total distance
                        </th>
                        <th class="border-0 rounded-end text-center">actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- Item -->
                    {% for session in sport_sessions %}
                        <tr>
                            <td>{{ session.date ? session.date|date('d-m-Y') : '' }}</td>
                            {% for mainSport in session.mainSport %}
                                <td>{{ mainSport.name }}</td>
                                <td>{{ mainSport.duration }} minutes</td>
                                <td class="text-center">{{ mainSport.distance }} {{ distance_unit }}</td>
                                <td class="text-center">{{ mainSport.elevationGain }} {{ elevation_unit }}</td>
                                <td class="text-center">{{ mainSport.elevationLoss }} {{ elevation_unit }}</td>
                            {% endfor %}
                            <td class="text-center">{{ session.totalDuration }} {{ duration_unit }}</td>
                            <td class="text-center">{{ session.totalDistance }} {{ distance_unit }}</td>
                            <td class="text-center d-flex justify-content-center">
                                <a href="{{ path('sport_session_show', {'id': session.id}) }}"><i
                                            class="fas fa-eye"></i></a>
                                <a href="{{ path('sport_session_edit', {'id': session.id}) }}"><i
                                            class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                        <!-- End of Item -->
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(sport_sessions, 'base/pagination.html.twig') }}
    </div>
{% endblock %}
